{
  "name": "mindkeep-desktop",
  "version": "1.0.0",
  "description": "Offline knowledge vault desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build"
  },
  "keywords": [
    "electron",
    "notes",
    "markdown",
    "knowledge",
    "offline"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mindkeep.app",
    "productName": "MindKeep",
    "artifactName": "${productName}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!build",
      "!*.log"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup.${ext}",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}.${ext}",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}.${ext}",
      "icon": "icon.png"
    }
  }
}
