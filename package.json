{
  "name": "mindkeep-desktop",
  "version": "6.2.0",
  "description": "Offline knowledge vault desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "rebuild": "electron-rebuild",
    "build": "npm run rebuild && electron-builder",
    "build-win": "npm run rebuild && electron-builder --win",
    "build-mac": "npm run rebuild && electron-builder --mac",
    "build-linux": "npm run rebuild && electron-builder --linux",
    "dist": "npm run build"
  },
  "keywords": [
    "electron",
    "notes",
    "markdown",
    "knowledge",
    "offline"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.mindkeep.app",
    "productName": "MindKeep",
    "artifactName": "${productName}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "SebastianOana",
      "repo": "mindkeep-desktop"
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup.${ext}"
    },
    "beforeBuild": "npm run rebuild",
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}.${ext}",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}.${ext}",
      "icon": "icon.png"
    }
  }
}
